<script>
    $('input[type=radio]').on('change', function() {
    $(this).closest("form").submit();
});
 
$("button").click(function(){
// console.log($(this).val);
// console.log($(this).val());
if($(this).val() == 1){
    var lid1 = parseInt($("#lid1").text()) +1;
    $("#lid1").text(lid1);

}else{
    var lid2 = parseInt($("#lid2").text()) +1;
    $("#lid2").text(lid2);
}

});



</script>

